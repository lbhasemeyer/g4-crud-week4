<table class="table">

  <h1> Events
    <%= link_to 'Create Event', new_event_path, class: "btn btn-primary pull-right" %>
  </h1>

    <thead>
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th>Location</th>
        <th>Capacity</th>
        <th>Requires ID</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.description, event_path(event) %></td>
          <td><%= event.date %></td>
          <td><%= event.location %></td>
          <td><%= event.capacity %></td>
          <td><% if event.requires_id %>
                True
              <% else %>
                False
              <% end %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <% end %>
    </tbody>
